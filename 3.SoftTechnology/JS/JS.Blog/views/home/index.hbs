<div class="container body-content">
    <div class="row">
        {{#each articles}}
            <div class="col-md-6">
                <article>
                    <header style="text-align: left; color: black ; font-style: italic;">
                        <h2>{{this.title}}</h2>
                    </header>

                    <p style="height:100px; line-height:20px;  overflow:hidden;">{{this.content}}
                    </p>

                    <small class="author">Author:
                        {{this.User.fullName}}
                    </small>

                    <footer>
                        <div class="pull-right">
                            <a class="btn btn-default btn-xs" href="/article/details/{{this.id}}">Read more &raquo;</a>
                        </div>
                    </footer>
                </article>
            </div>
        {{/each}}
    </div>
</div>
